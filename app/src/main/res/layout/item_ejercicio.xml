<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textNombreEjercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Ejercicio"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textGrupoMuscular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grupo Muscular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNombreEjercicio"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textDiaSemana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DÃ­a de la Semana"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textGrupoMuscular"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
